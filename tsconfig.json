{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/app/components/*"],
      "@environments/*": ["src/environments/*"],
      "@implementation/*": ["src/app/implementation/*"],
      "@models/*": ["src/app/models/*"],
      "@modules-admin-manager/*": ["src/app/modules/admin-manager/*"],
      "@modules-mentor-manager/*": ["src/app/modules/mentor-manager/*"],
      "@modules-resource-manager/*": ["src/app/modules/resource-manager/*"],
      "@modules-school-manager/*": ["src/app/modules/school-manager/*"],
      "@modules-shared/*": ["src/app/modules/shared/*"],
      "@modules-student-manager/*": ["src/app/modules/student-manager/*"],
      "@modules-workflow-manager/*": ["src/app/modules/workflow-manager/*"],
      "@other/*": ["src/"],
      "@providers/*": ["src/app/providers/*"]
    },
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "ES2022",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "strict": false,
    "useDefineForClassFields": false
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
